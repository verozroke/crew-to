{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./src/*.ts",
    "./src/**/*.json",
    "./env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@img/*": [
        "./src/assets/img/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
    }
  }
}